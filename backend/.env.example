# Copy to .env.local for local dev, .env.production for Fly

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials  # SA key (local) or WIF (prod)
GOOGLE_CLOUD_PROJECT=your-project-id
VERTEX_LOCATION=global             # or "us-central1", "europe-west4" 
VERTEX_PROJECT=your-project-id    # GCP project for Vertex AI
ENFORCE_VERTEX_WIF=false           # set true in production

# Database
DATABASE_URL=postgresql+asyncpg://...
DATABASE_SYNC_URL=postgresql://...

# OpenAI
OPENAI_API_KEY=sk-proj-...
OPENAI_MODELS_ALLOWLIST=gpt-5
OPENAI_DEFAULT_MAX_OUTPUT_TOKENS=512
OPENAI_MAX_OUTPUT_TOKENS_CAP=4000

# Grounding Configuration
OPENAI_GROUNDING_TOOL=web_search   # or "web_browser"
OPENAI_TOOL_CHOICE=auto            # keep "auto" for v0.1
LLM_TIMEOUT_UN=60                  # seconds for ungrounded
LLM_TIMEOUT_GR=120                 # seconds for grounded

# Security
SECRET_KEY=your-secret-key
CORS_ORIGINS=["http://localhost:3000"]

# Feature Flags
ENFORCE_MODEL_VERSION=true
REQUIRE_GROUNDING_EVIDENCE=true
ENABLE_IDEMPOTENCY=true
PROVIDER_VERSION_CACHE_TTL=300

# Server Settings
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development
LOG_LEVEL=info